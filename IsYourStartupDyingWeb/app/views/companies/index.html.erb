    <style>
      body {margin:0;}
      ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #40bc86;
        position: fixed;
        top: 0;
        width: 100%;
        opacity: 0.7;
      }
      li {
        float: right;
      }
      li a {
        display: block;
        color: #000;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
      }

      li b {
        font-weight: lighter;
        display: block;
        color: #000;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
      }

      li a:hover:not(.active) {
        background-color: #fff;
      }
      .active {
        background-color: #40bc86;
      }
    </style>

    <ul>
    <% if current_user %>
      <li><a href="../users/sign_out">Sign out</a></li>
      <li><a href="#thing1">My Account</a></li>
